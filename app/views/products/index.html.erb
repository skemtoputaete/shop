<div class="page-header text-center">
  <p class="lead text-center"><%= link_to "Перейти к просмотру всех категорий", categories_path %></p>
  <h2>Топ девять товаров интернет-магазина</h2>
</div>

<% $lines = @products.count / 3 %>
<% $i = 0 %>
<% $k = 3 %>
<% while $i < $lines do %>
<div class="row">
  <% $element = 0 %>
  <% while $element < 3 do %>
  <% $index = $element + ($i - 1) * $k %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= @products[$index].picture %>">
      <div class="caption">
        <h3> <%= link_to @products[$index].name, product_path(@products[$index]) %> </h3>
        <p> <% @products[$index].description %> </p>
      </div>
    </div>
  </div>
  <% $element += 1 %>
  <% end %>
</div>
<% $i += 1 %>
<% end %>
