<div class="hero-unit text-center">
  <h2><%= @category.name %></h2>
</div>

<% if ( @subcategories.count > 0 ) then %>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center">Название подкатегории</th>
      <% if can? :manage, Category then %>
      <th colspan="2" class="text-center"> Доступные действия над категориями </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
  <% @subcategories.each do |subcategory| %>
    <tr>
      <td class="text-center"> <%= link_to(subcategory.name, category_path(subcategory)) %> </td>
      <% if can? :manage, Category then %>
      <td class="text-center"> <%= link_to "Редактировать", edit_category_path(subcategory) %> </td>
      <td class="text-center"> <%= link_to "Удалить", category_path(subcategory), method: :delete %> </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>

<% if ( @products.count != 0) then%>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center">Название товара</th>
      <th class="text-center">Цена товара</th>
      <th class="text-center">Превью</th>
      <% if can? :manage, Product then %>
      <th colspan="2" class="text-center">Действия</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td class="text-center"><%= link_to product.name, product_path(product) %></td>
      <td class="text-center"><%= product.price %></td>
      <td class="text-center"><img class="img-rounded" style="max-width: 40%; max-heigth: 40%" src="<%= product.picture %>"></td>
      <% if can? :manage, Product then%>
      <td class="text-center"><%= link_to "Редактировать", edit_product_path(product)%></td>
      <td class="text-center"><%= link_to "Удалить", product_path(product), method: :delete%></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
  </table>
  <% end %>
  <div class="text-center">
    <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
  </div>
