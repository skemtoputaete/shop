<!DOCTYPE html>
<html>
  <head>
    <title>Интернет-магазин</title>
    <%= csrf_meta_tags %>
    <script type="text/javascript" src="http://code.jquery.com/jquery-3.2.1.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class ="nav navbar-fixed-top navbar-default">
      <ul class="nav nav-tabs">
        <li><%= link_to "Главная страница", root_path, :data => {:togle => "tab"} %></li>
        <li><%= link_to "Категории товара", categories_path, :data => {:togle => "tab"} %></li>
        <li><%= link_to "Товары", products_path %></li>

    <% if user_signed_in? %>
      <li class="dropdown pull-right">
        <%= link_to("#", :class => "dropdown-toggle", :data => { :toggle => "dropdown"}) do %>
          Вы вошли как <%= current_user.email %> <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Выйти", destroy_user_session_path, :method => :delete%></li>
        <li><%= link_to "Редактировать профиль", edit_user_registration_path%></li>
        <% if can? :manage, :all then %>
        <li><%= link_to "Страница администратора", administrator_index_path%></li>
        <% end %>
      </ul>
      <li>
    <% else %>
      <li class="pull-right"><%= link_to "Зарегистрироваться", new_user_registration_path, :data => {:togle => "tab"} %></li>
      <li class="pull-right"><%= link_to "Войти", new_user_session_path , :data => {:togle => "tab"}%></li>
    <% end %>
    </ul>
  </div>

  <% flash.each do |name, msg| %>
  <div class="alert alert-info alert-dismissable" style="padding-top: 50px">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= msg %>
  </div>
  <% end %>

  <div class="container" style="padding-top: 40px">
    <%= yield %>
  </div>

  </body>
</html>
